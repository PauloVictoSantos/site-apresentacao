---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div>
			<img src="assets/logo-ifam-sf.png" alt="">
		</div>
		<slot />
		<footer>Feito com por alunos de desenvolvimento de sistemas do IFAM-CPRF em 2023</footer>
	</body>
</html>
<style is:global>
	:root {
		background-image: no-repeat-linear-gradient(to bottom, #103772, #006bab, #009dae, #00cb7a, #a8eb12);
	}
