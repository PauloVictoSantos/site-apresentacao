<style>
	main {
		padding-top: 3rem;
		display: flex;
		flex-direction: column;
		justify-content: start;
		align-items: center;
		background-image: linear-gradient(to right top, #051937, #004d7a, #008793, #00bf72, #a8eb12);	
		height: 100vh;
		width: 100vw;
	}
	button{
		background-color: #a8eb12;
		width: 7rem;
		height: 2rem;
		border-radius:1rem;
	}
